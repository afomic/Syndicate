<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imv_user_picture"
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:layout_height="200dp"
            android:src="@drawable/avater" />
        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchorGravity="right|bottom"
            android:visibility="gone"
            android:layout_toRightOf="@id/imv_user_picture"
            android:src="@drawable/ic_photo" />
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/container_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/content_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="User ID"
                android:padding="@dimen/content_text_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="this is a ranom text"
                android:id="@+id/tv_user_id"
                android:padding="@dimen/content_text_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/container_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/content_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Status"
                android:id="@+id/tv_status_title"
                android:padding="@dimen/content_text_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:padding="@dimen/icon_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="this is a ranom text"
                android:id="@+id/tv_user_status"
                android:layout_below="@id/tv_status_title"
                android:padding="@dimen/content_text_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/container_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="@dimen/content_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Username"
                android:id="@+id/tv_user_name_label"
                android:padding="@dimen/content_text_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:src="@drawable/ic_edit"
                android:layout_alignParentRight="true"
                android:padding="@dimen/icon_padding"
                android:id="@+id/imv_edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_below="@id/imv_edit_name"
                android:orientation="horizontal"
                android:padding="@dimen/content_text_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u0040"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <TextView
                    android:text="Afolabi Michael"
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>