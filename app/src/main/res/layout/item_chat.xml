<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="@dimen/user_icon_padding"
        android:id="@+id/imv_recipient_initials"
        android:layout_width="@dimen/user_icon_image_weight"
        android:layout_margin="@dimen/user_icon_margin"
        android:layout_height="@dimen/user_icon_image_height"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="@dimen/layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                tools:text="Anonymous developer"
                android:id="@+id/tv_recipient"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_weight="1"
                android:textSize="@dimen/big_text_size"
                android:layout_height="wrap_content"/>
            <TextView
                tools:text="2hrs ago"
                android:padding="@dimen/content_text_padding"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/tv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                tools:text="i will buy it all sir"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_last_message"
                android:padding="@dimen/content_text_padding"
                android:layout_height="wrap_content"/>
            <TextView
                tools:text="13"
                android:padding="@dimen/unread_message_count_text_padding"
                android:gravity="center"
                android:layout_marginRight="@dimen/unread_message_count_margin_right"
                android:textColor="@color/colorWhite"
                android:background="@drawable/unread_message_count_background"
                android:id="@+id/tv_unread_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>